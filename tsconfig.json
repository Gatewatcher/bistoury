{
  "include": ["src", "types", "custom.d.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "lib": ["dom", "esnext", "dom.iterable"],
    "types": ["vite/client", "node", "vitest/globals"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "strict": false,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "declarationMap": true,
    "paths": {
      "*": ["src/*", "node_modules/*"]
    },
    "jsx": "preserve",
    "esModuleInterop": true,
    "target": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitThis": false
  },
  "exclude": ["node_modules", "**/*.test.tsx?", "dist"]
}
